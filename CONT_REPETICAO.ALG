Algoritmo "Cont_Repeticao"

Var
 contador: inteiro


Inicio
      escreval ("iremos contar de 0 a 100 , apenas os números pares")
     contador <- 0
     enquanto (contador <=100) faca
     escreval (contador)
       contador <- contador + 2
     
     fimenquanto
     escreval ("Chegamos ao final da contagem, no número" , contador - 2)
     

fimalgoritmo